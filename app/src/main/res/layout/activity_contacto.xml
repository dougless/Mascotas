<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mascotas.ContactoActivity">

    <include android:id="@+id/actionBar"
        layout="@layout/actionbar"></include>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textPersonName"
        android:hint="Nombre"
        android:ems="10"
        android:id="@+id/etNombre"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/actionBar"
        android:layout_marginTop="50dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textEmailAddress"
        android:hint="Correo"
        android:ems="10"
        android:id="@+id/etCorreo"
        android:layout_below="@+id/etNombre"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:inputType="textMultiLine"
        android:lines="4"
        android:hint="Mensaje"
        android:ems="10"
        android:id="@+id/etMensaje"
        android:layout_below="@+id/etCorreo"
        android:layout_alignLeft="@+id/etCorreo"
        android:layout_alignStart="@+id/etCorreo" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Enviar correo"
        android:id="@+id/bEnviar"
        android:layout_centerVertical="true"
        android:layout_below="@id/etMensaje"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
